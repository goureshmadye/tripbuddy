rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isTripCreator(tripId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/trips/$(tripId)).data.creatorId == request.auth.uid;
    }
    
    function isTripCollaborator(tripId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/tripCollaborators/$(request.auth.uid + '_' + tripId));
    }
    
    function canAccessTrip(tripId) {
      return isTripCreator(tripId) || isTripCollaborator(tripId);
    }
    
    // Users collection - users can read/write only their own documents
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Trips collection
    match /trips/{tripId} {
      allow read: if canAccessTrip(tripId);
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.creatorId;
      allow update, delete: if isTripCreator(tripId);
    }
    
    // Trip Collaborators collection
    match /tripCollaborators/{collaboratorId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isTripCreator(resource.data.tripId)
      );
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isTripCreator(resource.data.tripId)
      );
    }
    
    // Expenses collection (subcollection under trips)
    match /trips/{tripId}/expenses/{expenseId} {
      allow read, write: if canAccessTrip(tripId);
    }
    
    // Expense Shares collection
    match /expenseShares/{shareId} {
      allow read, write: if isAuthenticated();
    }
    
    // Itinerary items (subcollection under trips)
    match /trips/{tripId}/itinerary/{itemId} {
      allow read, write: if canAccessTrip(tripId);
    }
    
    // Documents collection (subcollection under trips)
    match /trips/{tripId}/documents/{documentId} {
      allow read, write: if canAccessTrip(tripId);
    }
    
    // Notifications collection - users can only access their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Trip Invitations collection
    match /tripInvitations/{invitationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Subscriptions collection - users can only access their own subscription
    match /subscriptions/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Security logs collection - only for logging security events
    match /security_logs/{logId} {
      allow create: if isAuthenticated();
      allow read: if false; // No read access for security
    }
  }
}